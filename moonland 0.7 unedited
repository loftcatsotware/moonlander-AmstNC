    3 REM v0.7
    4 SNDSTAT=2
    5 SCORE=0
    6 LEVEL=1:DIFF=25
    7 GOSUB 800:REM TITLE
   10 GOSUB 190
   20 X=250
   30 Y=50
   40 B=-1
   50 REPEAT
   60   PLOT 4,X,Y:PLOT 5,X+3,Y+5:PLOT 5,X+6,Y:PLOT 5,X,Y
   70   REM
   80   OX=    7 GOSUB 800:REM TITLE
   10 GOSUB 190
   20 X=250
   30 Y=50
   40 B=-1
   50 REPEAT
   60   PLOT 4,X,Y:PLOT 5,X+3,Y+5:PLOT 5,X+6,Y:PLOT 5,X,Y
   70   REM
   80   OX=X:OY=Y
   90   Y=Y+B
  100   FOR U=1 TO 150:NEXT
  110   I$=INKEY$(0)
  120   IF I$="Z" THEN X=X-2
  130   IF I$="X" THEN X=X+2
  140   IF I$="T" THEN Y=Y+2
  150   P=POINT(X,Y):P2=POINT(X+6,Y):P=P+P2:IF P>0 AND Y<OY THEN END
  160   PLOT 4,OX,OY:PLOT 7,OX+3,OY+5:PLOT 7,OX+6,OY:PLOT 7,OX,OY
  170 UNTIL Y=2
  180 VDU 4:END
  190 REM DRAW LANDSCAPE
  200 CLS
  210 X=1:Y=10
  220 PLOT 4,X,Y
  230 REPEAT
  240   R=INT(RND(8))
  250   IF R=1 THEN GOSUB 280 ELSE GOSUB 310
  260 UNTIL X>478
  270 RETURN
  275 REM DRAW A FLAT LANDSCAPE SECTION
  280 X=X+INT(RND(10)+1)
  290 PLOT 5,X,Y
  300 RETURN
  310 REM SLOPE
  320 X=X+INT(RND(10)+1)
  330 Y=Y+INT(RND(11)-5)
  340 IF Y>30 THEN Y=30
  350 IF Y<1 THEN Y=1
  360 PLOT 5,X,Y
  370 RETURN
  800 REM TITLE
  805 VDU 5:CLS
  810 FOR Y=0 TO 6
  820   PRINT TAB(1,Y);"*"
  823   PRINT TAB(79,Y);"*";
  825 NEXT Y
  840 FOR X=1 TO 79
  850   PRINT TAB(X,0);"*";:PRINT TAB(X,7);"*";
  860 NEXT X
  870 VDU 17:PRINT TAB(35,2);"M O O N L A N D E R":VDU 18
  875 PRINT TAB(20,3);"by Tony Kingsmill Loftcat Software"
  880 PRINT TAB(20,4);"Controls: Z,X - left/right  T - Thrust"
  890 PRINT TAB(35,5);"Press any key to start";
  990 I$=GET$
  995 RETURN
>*SPOOL